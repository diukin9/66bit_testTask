@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PlayerCatalog.ViewModels.PlayerViewModel
@{ 
    ViewData["Title"] = Localizer["Title"];
}

<div class="center_block margin-top-5">
    <div class="col-md-12 nopadding">
        <div class="col-md-12 content padding33">
            <form id="contact" asp-controller="Player" asp-action="EditPlayer" method="post">
                <input asp-for="Id" type="hidden" />
                <input asp-for="AllTeams" type="hidden" />
                <div class="form-group">
                    <input asp-for="Name" class="form-control" autocomplete="off" required>
                    <input asp-for="Surname" class="form-control" autocomplete="off" required>
                    <select asp-for="Gender" class="form-control" required>
                        <option value="0" selected>@Localizer["MaleGender"]</option>
                        <option value="1">@Localizer["FemaleGender"]</option>
                    </select>
                    <input asp-for="Team" class="form-control" list="team" autocomplete="off" required>
                    <datalist id="team">
                        @foreach (var team in Model.AllTeams)
                        {
                            <option>@team.Name</option>

                        }
                    </datalist>
                    <select asp-for="Nation" class="form-control" required>
                        <option value="0">@Localizer["RussianNationality"]</option>
                        <option value="1">@Localizer["AmericanNationality"]</option>
                        <option value="2">@Localizer["ItalianNationality"]</option>
                    </select>
                    <input asp-for="Birthdate" type="date" class="form-control"
                           max='@DateTime.Now.ToString("yyyy-MM-dd")' required><br>
                    <button type="submit" class="btn btn-1 col-md-12 col-xs-12">@Localizer["SaveBtnText"]</button>
                </div>
            </form>
        </div>
    </div>
</div>