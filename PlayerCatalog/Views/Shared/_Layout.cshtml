@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/main.css">
    <title>@ViewData["Title"]</title>
</head>

<body id="bg">

    <div id="row">
        <div class="wrapper">
            <div class="mobile-view">
                <div class="buttons col-md-12 col-sm-12 col-xs-12 no-margin top">
                    <div class="inner-row">
                        <a class="top-link btn-1f md-trigger" data-modal="about-12" id="about">
                            <span id="customBtn"><i>&boxh;</i>@Localizer["Switch"]<i>&boxh;</i></span>
                        </a>
                    </div>
                </div>
            </div>
        @RenderBody()
        <div style="text-align:center;">
            @await Html.PartialAsync("_SelectLanguagePartial")
        </div>
        </div>
    </div>

    <script src="~/js/dynamic.js"></script>
    <script src="~/js/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>